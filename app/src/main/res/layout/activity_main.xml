<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.segundoauqui.layoutsandreviews.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <EditText
        android:layout_weight="1"
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/etName"
        android:inputType="number" />

    <EditText
        android:layout_weight="1"
        android:id="@+id/zxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zxName"
        android:inputType="number" />

</LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToSecond" />

    <Button

        android:id="@+id/btnDoMagic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DoMagic"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/btnDoMagic"
        android:text="@string/hello"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageName"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/puppy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageName"
        android:text="go to another activity"
        android:onClick="goToSecond"/>

    <EditText
        android:id="@+id/Second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/passPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="passPersonToASecond"
        android:text="PAss person to next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

